<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.fit.oop.maximov.snake.task_2_3_1.controllers.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ToolBar fx:id="toolBarSpeed" maxHeight="40.0" maxWidth="200.0" minHeight="40.0" minWidth="200.0" prefHeight="40.0" prefWidth="200.0">
        <RadioButton fx:id="radioButtonSpeedSlow" mnemonicParsing="false" onAction="#onRadioButtonSpeedClick" text="Slow" />
        <RadioButton fx:id="radioButtonSpeedMedium" mnemonicParsing="false" onAction="#onRadioButtonSpeedClick" selected="true" text="Medium" />
        <RadioButton fx:id="radioButtonSpeedFast" mnemonicParsing="false" onAction="#onRadioButtonSpeedClick" text="Fast" />
    </ToolBar>
    <ToolBar fx:id="toolBarMapSize" maxHeight="40.0" maxWidth="200.0" minHeight="40.0" minWidth="200.0" prefHeight="40.0" prefWidth="200.0">
        <TextField fx:id="textFieldMapWidth" prefHeight="26.0" prefWidth="90.0" promptText="Width" />
        <TextField fx:id="textFieldMapHeight" prefHeight="26.0" prefWidth="90.0" promptText="Height" />
    </ToolBar>
    <Button fx:id="buttonStart" onAction="#onButtonStartClick" text="Start" />
</VBox>
